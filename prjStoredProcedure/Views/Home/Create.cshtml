@model IEnumerable<prjStoredProcedure.Models.tEmployee>

@{
    ViewBag.Title = "員工新增";
}

<h2>@ViewBag.Title</h2>
<form method="post" action="@Url.Action("Create")">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label for="DepartmentId" class="control-label col-md-2">部門</label>
            <div class="col-md-10">
                @Html.DropDownList("fDepId", ViewBag.DepartmentId as SelectList, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label for="fName" class="control-label col-md-2">姓名</label>
            <div class="col-md-10">
                <input type="text" id="fName" name="fName" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label for="fPhone" class="control-label col-md-2">電話</label>
            <div class="col-md-10">
                <input type="text" id="fPhone" name="fPhone" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增" class="btn btn-primary" />
            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("返回員工列表", "Index", "Home", new { @class = "btn btn-success" })
    </div>

</form>

